{% extends "layout.njk" %}

{% block content %}
{% if old('errors') %}
<div class="alert alert-dismissible alert-danger">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p>Hibás adatok!</p>
  <p>{{ old('errors')[0].message }}</p>
</div>
{% endif %}
{% if old('success') %}
<div class="alert alert-dismissible alert-success">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p>Sikeres adatbevitel!</p>
  <p>{{ old('success')[0].message }}</p>
</div>
{% endif %}

<form class="form-horizontal" method="POST">
    {{ csrfField }}
  <fieldset>
    <legend>Kurzus adatainak módosítása</legend>
    <div class="form-group">
      <label for="capacity" class="col-lg-2 control-label">Férőhely</label>
      <div class="col-lg-4">
        <input type="number" min="{{ course.capacity }}" class="form-control" id="capacity" name="capacity" value="{{ course.capacity }}" placeholder="Férőhely">
      </div>
    </div>
    <div class="form-group">
      <label for="teacher_name" class="col-lg-2 control-label">Tanár neve</label>
      <div class="col-lg-4">
        <input type="input" min="{{ course.capacity }}" class="form-control" id="teacher_name" name="teacher_name" value="{{ course.teacher_name }}" placeholder="Tanár neve">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-4 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Módosít</button>
      </div>
    </div>
  </fieldset>
</form>

{% endblock %}